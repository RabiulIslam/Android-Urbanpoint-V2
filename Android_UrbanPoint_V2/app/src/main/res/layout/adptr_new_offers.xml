<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp90"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp4"
    android:paddingLeft="@dimen/dp4"
    android:paddingRight="@dimen/dp4"
    android:paddingTop="@dimen/dp4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/black_background_border">

        <ImageView
            android:id="@+id/fav_offer_Image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray_light"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toLeftOf="@+id/IconContainer"
            android:layout_toRightOf="@+id/fav_offer_Image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fav_offr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="offer"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp5"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@mipmap/food_icon_small"
                    android:text="@string/food_and_drink" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp5"
                    android:text="@string/food_and_drink"
                    android:textColor="@color/purchase_history_footer"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp5"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/icn_location"
                    android:text="@string/food_and_drink"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fav_merchant_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/food_and_drink"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fav_distance_and_merchant_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/fav_distance_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=" km"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/food_and_drink"
                android:textColor="@color/purchase_history_footer"
                android:textSize="@dimen/sp14"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/IconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newOffersFestivalIcon"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:background="@drawable/lock_offers"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/foodShowLockOffersIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lock_offers"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/fwd_icon" />

    </RelativeLayout>

</RelativeLayout>
