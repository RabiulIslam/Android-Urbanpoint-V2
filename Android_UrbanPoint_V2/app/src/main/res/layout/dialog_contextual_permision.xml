<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_background_border_contextual"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/contextual_txv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/contextual_messages_heading"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/locations_orange" />

    <TextView
        android:id="@+id/contextual_txv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/contextual_messages"
        android:textAlignment="center"
        android:textColor="@color/gray_light"
        android:textSize="15dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/contextual_btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/white_rounded_border"
            android:clickable="true"
            android:text="Not Now"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/contextual_btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/white_rounded_border"
            android:clickable="true"
            android:text="Allow"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>