<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="3dp"
        android:background="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="45dp">
        <RelativeLayout
            android:id="@+id/frg_notification_list_view_rl_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frg_notification_adapter_txv_date_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp18" />
                <TextView
                    android:id="@+id/frg_notification_adapter_txv_date_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="st"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:textAlignment="center"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp14" />
                <TextView
                    android:id="@+id/frg_notification_adapter_txv_date_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="June 2017"
                    android:textAlignment="center"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp18" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frg_notification_list_view_rl_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/frg_notification_list_view_rl_above">

            <TextView
                android:id="@+id/frg_notification_adapter_txv_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/frg_notification_list_view_rl_imv"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="sad sdfsadf sf sdafdsafsadf sdfsadf sdfsadfsa sadfsd sdfsaff"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/sp14"/>

            <RelativeLayout
                android:id="@+id/frg_notification_list_view_rl_imv"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/frg_notification_list_view_imv_arrow"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/fwd_icn_blck" />

            </RelativeLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/frg_notification_list_view_rl_below"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:paddingBottom="5dp"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frg_notification_list_view_rl_new"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:background="@drawable/orange_gadient_rectngle"
        >

        <TextView
            android:id="@+id/frg_notification_list_view_txv_new"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:text="New"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>
</RelativeLayout>