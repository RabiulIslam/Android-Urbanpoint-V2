<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/transparent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_br_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:id="@+id/app_bar_rl_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="visible">


                <CheckBox
                    android:id="@+id/app_bar_chkbx_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/slc_chkbx_menu"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/app_bar_rl_back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/app_bar_imv_back"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_button" />
            </RelativeLayout>


            <TextView
                android:id="@+id/app_br_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:text="Home"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_medium" />


            <RelativeLayout
                android:id="@+id/app_bar_rl_cancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/app_br_toolbar_txv_cancel"
                    style="@style/view_20"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="0dp"
                    android:text="cancel"
                    android:textSize="@dimen/fontsize_mini" />

            </RelativeLayout>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/orange_gadient_rectngle" />
</RelativeLayout>
