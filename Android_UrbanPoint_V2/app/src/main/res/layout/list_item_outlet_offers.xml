<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/new_offers_btn_background">

        <ImageView
            android:id="@+id/imv_offer_item"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp90"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_light"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/lst_item_new_offer_name_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/dp40"
            android:layout_marginTop="@dimen/dp20"
            android:paddingBottom="3dp"
            android:layout_toEndOf="@+id/imv_offer_item"
            android:text="But 1 Burger Get 1 Free at Capabacana"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/fwd_icn_blck"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/frg_outlet_offers_list_imvLocked" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/special_badge_3x"
                android:id="@+id/frg_outlet_oofers_imvSpecial" />

        </RelativeLayout>





    </RelativeLayout>

</RelativeLayout>