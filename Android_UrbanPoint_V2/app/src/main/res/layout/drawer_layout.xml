<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Drawer_menu"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/drawer_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drawer_txv_user_name"
                style="@style/view_20"
                android:text="Hi, Ali"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_normal" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/drawer_ll_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_home"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_invite_friends"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"
        android:orientation="horizontal"
        android:paddingLeft="10dp">


        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_profile"
            android:textSize="@dimen/fontsize_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/drawer_txv_profile"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="-5dp"
                android:background="@drawable/orange_gadient_rectngle"
                android:paddingTop="6dp"
                android:text="80%"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />


    <LinearLayout
        android:id="@+id/drawer_ll_how_to_use"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_how_to_use"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_my_reviews"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_my_reviews"
            android:textSize="@dimen/fontsize_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/drawer_txv_review"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="-5dp"
                android:background="@drawable/orange_gadient_rectngle"
                android:paddingTop="6dp"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_purchase_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_purchase_history"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_access_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_access_code"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_unsub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="gone">

        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_unsub"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_contact_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_contact_us"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/drawer_ll_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xxmedium"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="visible">


        <TextView
            style="@style/view_20"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/drawer_logout"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray"
        android:visibility="visible" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>
