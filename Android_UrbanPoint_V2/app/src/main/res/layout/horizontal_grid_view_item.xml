<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:minHeight="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/grd_vw_imv_bg"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:background="@color/lst_item_bg" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/grd_vw_imv_overlay"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@mipmap/grd_img_overlay" />

            <ImageView
                android:id="@+id/grd_vw_imv_festival"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/biryani_icon"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/grd_vw_rl_timmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="2dp">
                <ImageView
                    android:id="@+id/grd_vw_imv_clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icn_home_timmer"/>

                <TextView
                    android:id="@+id/grd_vw_txv_timmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/grd_vw_imv_clock"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/grd_vw_txv_offer"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:paddingTop="2dp"
            android:maxLines="3"
            android:paddingRight="10dp"
            android:text="Free Desert with Main Course at Crossroasts Kitchen"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />

    </LinearLayout>
</LinearLayout>