<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp40"
    android:layout_marginRight="@dimen/dp40"
    android:background="@color/transparent"
    tools:ignore="MissingPrefix">

    <!--android:background="@drawable/round_edit_text"-->
    <LinearLayout
        android:id="@+id/progressDialogMainLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_edit_text"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <!-- <ProgressBar
             android:layout_width="@dimen/dp19"
             android:layout_height="@dimen/dp19"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:gravity="center"
             android:indeterminateDrawable="@drawable/custom_ios_progress" />
 -->
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/icn_loading" />


        <TextView
            android:id="@+id/progressDialogMessageText"
            fontPath="fonts/roboto_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Loading text please wait..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_normal"
            android:layout_margin="10dp"/>
    </LinearLayout>


</RelativeLayout>