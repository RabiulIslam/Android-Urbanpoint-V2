<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/frg_subscription_ll_parentlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_main" />

                <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                    android:id="@+id/frg_subscription_lsv_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:choiceMode="singleChoice"
                    android:clickable="false"
                    android:divider="@color/transparent"
                    android:listSelector="@color/transparent"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:scrollbars="none"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/txv_subs_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="start"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="rgfg dg d gdf gd d fd gfd gf ggd"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/sp16"
                        android:visibility="visible" />

                </LinearLayout>

                <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                    android:id="@+id/frg_subscription_lsv_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="25dp"
                    android:choiceMode="singleChoice"
                    android:clickable="false"
                    android:divider="@color/transparent"
                    android:listSelector="@color/transparent"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:scrollbars="none" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dp10"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/opensans_regular"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp15"
                                android:text="@string/_300"
                                android:textColor="@color/gray_bg"
                                android:textSize="@dimen/fontsize_normal" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignLeft="@+id/tv_price1"
                                android:layout_alignRight="@+id/tv_price1"
                                android:layout_centerVertical="true"
                                android:background="@drawable/strikeline" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/monthly_price"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/monthly"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/frg_subscription_btn1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/orange_gadient_rectngle_rounded"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/select"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:padding="@dimen/dp10"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/opensans_regular"
                                android:paddingLeft="@dimen/dp15"
                                android:paddingRight="@dimen/dp15"
                                android:text="@string/_seventy"
                                android:textColor="@color/gray_bg"
                                android:textSize="@dimen/fontsize_normal" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignLeft="@+id/tv_price2"
                                android:layout_alignRight="@+id/tv_price2"
                                android:layout_centerVertical="true"
                                android:background="@drawable/strikeline" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/half_yearly_price"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/half_yearly"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/frg_subscription_btn2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/orange_gadient_rectngle_rounded"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/select"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="@dimen/dp10"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/opensans_regular"
                                android:paddingLeft="@dimen/dp15"
                                android:paddingRight="@dimen/dp15"
                                android:text="@string/_300"
                                android:textColor="@color/gray_bg"
                                android:textSize="@dimen/fontsize_normal" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignLeft="@+id/tv_price3"
                                android:layout_alignRight="@+id/tv_price3"
                                android:layout_centerVertical="true"
                                android:background="@drawable/strikeline" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/yearly_price"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/yearly"
                            android:textColor="@color/gray_bg"
                            android:textSize="@dimen/fontsize_normal"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/frg_subscription_btn3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/orange_gadient_rectngle_rounded"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/select"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_normal" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_condition_applies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_alignLeft="@+id/layout"
                    android:layout_marginTop="@dimen/dp25"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/condition_applies"
                    android:textColor="@color/gray_bg"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_additional_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_condition_applies"
                    android:layout_alignLeft="@+id/tv_condition_applies"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/additional_vat"
                    android:textColor="@color/gray_bg"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="normal" />
                <!--<LinearLayout-->
                <!--android:layout_alignLeft="@+id/layout"-->
                <!--android:layout_alignRight="@+id/layout"-->
                <!--android:layout_below="@+id/layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="@dimen/dp25"-->
                <!--android:orientation="vertical">-->

                <!---->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_additional_vat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_access_code"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:hint="@string/subscription_screen_have_code"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_light"
                        android:textSize="@dimen/fontsize_small"
                        android:visibility="visible" />


                    <LinearLayout
                        android:id="@+id/frg_subscription_ll_access_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_access_code"
                        android:layout_centerHorizontal="true"

                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/frg_subscription_btn_access_code"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.20"
                            android:background="@drawable/custom_round_gray_button"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/btn_access_code"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fontsize_normal" />
                    </LinearLayout>
                </RelativeLayout>
                <!--</LinearLayout>-->
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
