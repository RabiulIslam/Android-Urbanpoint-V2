<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/frg_subscription_ll_parentlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo_main" />

                    <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                        android:id="@+id/frg_subscription_lsv_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:choiceMode="singleChoice"
                        android:clickable="false"
                        android:divider="@color/transparent"
                        android:listSelector="@color/transparent"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:scrollbars="none"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:id="@+id/txv_subs_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="rgfg dg d gdf gd d fd gfd gf ggd"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="start"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/sp16"
                            android:visibility="visible" />

                    </LinearLayout>

                    <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                        android:id="@+id/frg_subscription_lsv_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:choiceMode="singleChoice"
                        android:clickable="false"
                        android:divider="@color/transparent"
                        android:listSelector="@color/transparent"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:scrollbars="none" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible">
                                <TextView
                                    android:paddingLeft="@dimen/dp10"
                                    android:paddingRight="@dimen/dp15"
                                    android:id="@+id/tv_price1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@string/_300"
                                    android:layout_centerVertical="true"
                                    android:textSize="@dimen/fontsize_normal"
                                    android:textColor="@color/gray_bg"/>
                                <ImageView
                                    android:layout_alignLeft="@+id/tv_price1"
                                    android:layout_alignRight="@+id/tv_price1"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/strikeline"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/_9taka"
                                android:textSize="@dimen/fontsize_normal"
                                android:textColor="@color/gray_bg"/>
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/daily"
                                android:textSize="@dimen/fontsize_normal"

                                android:textColor="@color/gray_bg"/>

                            <Button
                                android:layout_marginTop="2dp"
                                android:id="@+id/frg_subscription_btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height_xmedium"
                                android:background="@drawable/orange_gadient_rectngle_rounded"
                                android:text="@string/select"
                                android:textColor="@color/white"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="@dimen/fontsize_normal" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingLeft="@dimen/dp10"
                            android:paddingRight="@dimen/dp15"
                            android:id="@+id/tv_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/_seventy"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/fontsize_normal"
                            android:textColor="@color/gray_bg"/>
                        <ImageView
                            android:layout_alignLeft="@+id/tv_price2"
                            android:layout_alignRight="@+id/tv_price2"
                            android:layout_centerVertical="true"
                            android:background="@drawable/strikeline"
                            android:layout_width="match_parent"
                            android:layout_height="2dp" />
                    </RelativeLayout>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/_49taka"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@color/gray_bg"/>
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/weekly"

                                android:textSize="@dimen/fontsize_normal"
                                android:textColor="@color/gray_bg"/>

                            <Button
                                android:layout_marginTop="2dp"
                                android:id="@+id/frg_subscription_btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height_xmedium"
                                android:background="@drawable/orange_gadient_rectngle_rounded"
                                android:text="@string/select"
                                android:textColor="@color/white"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="@dimen/fontsize_normal" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp15"
                                android:id="@+id/tv_price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/_300"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/fontsize_normal"
                                android:textColor="@color/gray_bg"/>
                            <ImageView
                                android:layout_alignLeft="@+id/tv_price3"
                                android:layout_alignRight="@+id/tv_price3"
                                android:layout_centerVertical="true"
                                android:background="@drawable/strikeline"
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/_99taka"
                                android:textSize="@dimen/fontsize_normal"
                                android:textColor="@color/gray_bg"/>


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/monthly"

                                android:textSize="@dimen/fontsize_normal"
                                android:textColor="@color/gray_bg"/>
                        <Button
                            android:layout_marginTop="2dp"
                            android:id="@+id/frg_subscription_btn_cnfrm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:background="@drawable/orange_gadient_rectngle_rounded"
                            android:text="@string/select"
                            android:textColor="@color/white"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="@dimen/fontsize_normal" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_above="@+id/frg_subscription_ll_access_code"
                    android:layout_marginBottom="-10dp"
                    android:hint="@string/subscription_screen_have_code"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_light"
                    android:textSize="@dimen/fontsize_small"
                    android:gravity="center"
                    android:visibility="visible" />


                <LinearLayout
                    android:id="@+id/frg_subscription_ll_access_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/frg_subscription_btn_access_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_xmedium"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.20"
                        android:background="@drawable/custom_round_gray_button"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/btn_access_code"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/fontsize_normal" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>