<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/gray"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:id="@+id/rl_top_info"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAlignment="center"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/list_reviews_txvMerchantName"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/orange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_reviews_txvMerchantName"
        android:id="@+id/txvOfferName"
        android:textColor="@color/black"/>

</RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/rl_top_info"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:id="@+id/imvOffer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:gravity="bottom|center"
                android:background="#BF000000"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/lis_item_rl_not_happy"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/back"
                    android:background="@color/transparent"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imvNotHappy"
                        android:background="@color/transparent"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/not_happy_3x"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/frg_reviews_not_happy"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imvNotHappy"/>

                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/lis_item_rl_ok"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/back"
                    android:background="@color/transparent"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imvOk"
                        android:background="@color/transparent"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/ok_3x"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/frg_reviews_ok"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imvOk"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/lis_item_rl_love_it"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/back"
                    android:background="@color/transparent"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imvLoveIt"
                        android:background="@color/transparent"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/love_it_3x"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/fglove_it"
                        android:layout_marginTop="1dp"
                        android:includeFontPadding="false"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="2dp"
                        android:layout_below="@+id/imvLoveIt"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>