<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/frg_subscription_eligible_ll_parentlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/powered_ooredoo" />



                        <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                            android:id="@+id/frg_subscription_eligible_lsv_1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:choiceMode="singleChoice"
                            android:orientation="horizontal"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:clickable="false"
                            android:paddingTop="15dp"
                            android:divider="@color/transparent"
                            android:listSelector="@color/transparent"
                            android:paddingBottom="5dp"
                            android:scrollbars="none" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:id="@+id/txv_subs_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="rgfg dg d gdf gd d fd gfd gf ggd"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="start"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/sp16"
                            android:visibility="visible" />

                    </LinearLayout>


                    <TextView
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subscription_eligible_screen_get_free"
                        android:textAlignment="center"
                        android:layout_marginTop="40dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp15" />


                    <com.urbanpoint.UrbanPoint.Utils.ExpandableHeightGridView
                        android:id="@+id/frg_subscription_eligible_lsv_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:divider="@color/transparent"
                        android:layout_marginTop="20dp"
                        android:clickable="false"
                        android:choiceMode="singleChoice"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:visibility="gone"
                        android:paddingLeft="15dp"
                        android:listSelector="@color/transparent"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:scrollbars="none" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:gravity="center_horizontal">

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:id="@+id/txv_subs_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="rgfg dg d gdf gd d fd gfd gf ggd"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp16"
                            android:visibility="visible" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="25dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/frg_subscription_eligible_btn_cnfrm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_large"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/orange_gadient_rectngle_rounded"
                            android:text="@string/btn_subscribe_free"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_normal"/>
                    </LinearLayout>


                    <TextView
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subscription_eligible_screen_want_access"
                        android:textAlignment="center"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_light"
                        android:textSize="@dimen/fontsize_small" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="10dp"
                         android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/frg_subscription_eligible_btn_access_code"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_xmedium"
                            android:layout_weight="0.20"
                            android:textSize="@dimen/fontsize_normal"
                            android:textColor="@color/gray"
                            android:background="@drawable/custom_round_gray_button"
                            android:text="@string/btn_subscribe_for_15" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>