<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />
            <stroke android:width="2dip" android:color="@color/gray" />
            <gradient android:angle="-90" android:endColor="@color/gray" android:startColor="@color/transparent" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />
            <stroke android:width="2dip" android:color="@color/orange" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />
            <stroke android:width="2dip" android:color="@color/gray" />
            <gradient android:angle="-90" android:endColor="@color/transparent" android:startColor="@color/transparent" />
        </shape>
    </item>
</selector>